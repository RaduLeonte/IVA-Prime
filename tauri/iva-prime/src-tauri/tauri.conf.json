{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "IVA Prime",
  "version": "0.1.0",
  "identifier": "com.iva-prime.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "dragDropEnabled": false,
        "title": "IVA Prime",
        "width": 1000,
        "height": 600,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["gb", "gbk", "dna", "fasta"]
      }
    ]
  }
}
